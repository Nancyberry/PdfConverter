<?xml version="1.0" encoding="UTF-8"?>
<project name="module_pdfconverter" default="compile.module.pdfconverter">
  <dirname property="module.pdfconverter.basedir" file="${ant.file.module_pdfconverter}"/>
  
  <property name="module.jdk.home.pdfconverter" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.pdfconverter" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.pdfconverter" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.pdfconverter" value="-encoding UTF-8 -source 1.5 -target 1.5 ${compiler.args}"/>
  
  <property name="pdfconverter.output.dir" value="${module.pdfconverter.basedir}/target/classes"/>
  <property name="pdfconverter.testoutput.dir" value="${module.pdfconverter.basedir}/target/test-classes"/>
  
  <path id="pdfconverter.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="pdfconverter.module.production.classpath">
    <path refid="${module.jdk.classpath.pdfconverter}"/>
    <path refid="library.maven:_com.itextpdf:itextpdf:5.5.7.classpath"/>
  </path>
  
  <path id="pdfconverter.runtime.production.module.classpath">
    <pathelement location="${pdfconverter.output.dir}"/>
    <path refid="library.maven:_com.itextpdf:itextpdf:5.5.7.classpath"/>
  </path>
  
  <path id="pdfconverter.module.classpath">
    <path refid="${module.jdk.classpath.pdfconverter}"/>
    <pathelement location="${pdfconverter.output.dir}"/>
    <path refid="library.maven:_com.itextpdf:itextpdf:5.5.7.classpath"/>
  </path>
  
  <path id="pdfconverter.runtime.module.classpath">
    <pathelement location="${pdfconverter.testoutput.dir}"/>
    <pathelement location="${pdfconverter.output.dir}"/>
    <path refid="library.maven:_com.itextpdf:itextpdf:5.5.7.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.pdfconverter">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.pdfconverter">
    <patternset refid="excluded.from.module.pdfconverter"/>
  </patternset>
  
  <path id="pdfconverter.module.sourcepath">
    <dirset dir="${module.pdfconverter.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="pdfconverter.module.test.sourcepath">
    <dirset dir="${module.pdfconverter.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.pdfconverter" depends="compile.module.pdfconverter.production,compile.module.pdfconverter.tests" description="Compile module pdfconverter"/>
  
  <target name="compile.module.pdfconverter.production" depends="register.custom.compilers" description="Compile module pdfconverter; production classes">
    <mkdir dir="${pdfconverter.output.dir}"/>
    <javac2 destdir="${pdfconverter.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.pdfconverter}/javac">
      <compilerarg line="${compiler.args.pdfconverter}"/>
      <bootclasspath refid="pdfconverter.module.bootclasspath"/>
      <classpath refid="pdfconverter.module.production.classpath"/>
      <src refid="pdfconverter.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.pdfconverter"/>
    </javac2>
    
    <copy todir="${pdfconverter.output.dir}">
      <fileset dir="${module.pdfconverter.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.pdfconverter.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.pdfconverter.tests" depends="register.custom.compilers,compile.module.pdfconverter.production" description="compile module pdfconverter; test classes" unless="skip.tests">
    <mkdir dir="${pdfconverter.testoutput.dir}"/>
    <javac2 destdir="${pdfconverter.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.pdfconverter}/javac">
      <compilerarg line="${compiler.args.pdfconverter}"/>
      <bootclasspath refid="pdfconverter.module.bootclasspath"/>
      <classpath refid="pdfconverter.module.classpath"/>
      <src refid="pdfconverter.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.pdfconverter"/>
    </javac2>
    
    <copy todir="${pdfconverter.testoutput.dir}">
      <fileset dir="${module.pdfconverter.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.pdfconverter" description="cleanup module">
    <delete dir="${pdfconverter.output.dir}"/>
    <delete dir="${pdfconverter.testoutput.dir}"/>
  </target>
</project>